<html lang="en">

<head>
    <meta charset="utf-8">


    <title>edit</title>



    <!-- Fonts -->
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href='http://fonts.googleapis.com/css?family=Orbitron' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,500,300' rel='stylesheet' type='text/css'>




</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">

<%= render 'layouts/nav' %>


        <!-- Page Content -->


            <div class="edit-section">
            <div class="container">
                <br><br><br>

                        <h2>Find who is here</h2>

                         <table align="center" >



                        <% @people.each do |uid, profile| %>
                        <tr >

                            <td align="center" style="width:120px; height: 21px;" valign="middle">
                                <div style="align:center;">
                                <a href= <%= profile_path(profile.id) %> >
                                <%= image_tag profile.photo.url(:thumb),class:"img-thumbnail img-responsive"%>
                                </a>
                                </div>
                            </td>

                            <td class="list_description" >
                                <dl>
                                <dt ><font face="Verdana" color="#FFFFFF" size="+1"><%=profile.name%></font></dt>
                                <dd><font size="2" face="Verdana" color="<%= cycle('#0072E3', '#6F00D2') %>">Address:<%=profile.add1%></font></dd>
                                <dd><font size="2" face="Verdana" color="<%= cycle('#0072E3', '#6F00D2') %>">City:<%=profile.city%></font></dd>
                                <dd><font size="2" face="Verdana" color="<%= cycle('#0072E3', '#6F00D2') %>">State:<%=profile.state%></font></dd>
                                <dd><font size="2" face="Verdana" color="<%= cycle('#0072E3', '#6F00D2') %>">Postcode:<%=profile.post_code%></font></dd>

                                </dl>

                            </td>
                            <td>


            <% if current_user.profile.id != profile.id%>
               <div class="text-center"><%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                    "data-sid" => current_user.id, "data-rip" => profile.user_id %> </div>
          <% end %>



                            </td>




                  </tr>

                         <% end %>

                           </table>

                           <li class="previous"><%= link_to "Previous", previous %></li>
                           <li class="next"><%= link_to "Next", next %></li>
                           
                         </div>
                    </div>
                </div>
            </div>
        </div>


    </div>



</div>
</body>
</html>
