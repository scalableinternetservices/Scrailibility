<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-33-155-139.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
<!--
   <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
   </arrivalphase>
-->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="80" type="ts_http">
      <!-- start out at the main page. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url="/users/sign_in" method="GET" version="1.1"></http>
      </request>
      
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http url="/users/sign_in" method="POST" version="1.1" 
          content_type="application/x-www-form-urlencoded"
          contents="utf8=%E2%9C%93&amp;user%5Bemail%5D=tsunguser%40test%2Ecom&amp;user%5Bpassword%5D=123456789&amp;user%5Bremember_me%5D=0&amp;commit=Log+in"/>
      </request>

      <request>
        <http
          url="/discovery"
          version="1.1"
          method="GET" >
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http
          url="gyms/nearby_gym"
          version="1.1"
          method="GET" >
        </http>
      </request>
      
      <thinktime value="2" random="true"></thinktime>
      
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http
          url="gyms/nearby_gym"
          version="1.1"
          method="GET" >
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>
       
    </session>

    <session name="sign-up" probability="20" type="ts_http">

      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the sign up page, as a user would do.  -->
      <request>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new community form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique community name -->
      <setdynvars sourcetype="erlang" callback="ts_user_server:get_unique_id">
        <var name="random_email" />
      </setdynvars>

      <request subst="true">
        <dyn_variable name="session_cookie" re="[Ss]et-Cookie: _Scrailibility_session=(.*);"/>
        <dyn_variable name="created_user_profile_url" re="[Ll]ocation: (http://.*)\r"/>
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5Bemail%5D=%%_random_email%%%40gmail%2Ecom&amp;user%5Bpassword%5D=password&amp;user%5Bpassword_confirmation%5D=password&amp;utf8=%E2%9C%93&amp;commit=Sign+Up'>
        </http>
      </request>

      <request>
        <http url="%%_created_user_profile_url%%" method="GET" version="1.1"></http>
      </request>

      <thinktime value="5" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="100" end="200">
        <var name="random_weight" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="300" end="500">
        <var name="random_height" />
      </setdynvars>
      
      <thinktime value="10" random="true"></thinktime>

      <request subst="true">
        <http
          url='/profiles'
          version='1.1'
          method='POST'
      contents='time%5B1%5D=1&amp;time%5B16%5D=16&amp;profile%5Bname%5D=calvin&amp;profile%5Badd1%5D=405%20Hilgard%20Avenue&amp;profile%5Bcity%5D=Los%20Angeles&amp;profile%5Bstate%5D=CA&amp;profile%5Bpost_code%5D=90095&amp;utf8=%E2%9C%93&amp;commit=Sign+Up'
        ></http>
      </request>

      <request>
        <http
          url="/discovery"
          version="1.1"
          method="GET" >
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http
          url="gyms/nearby_gym"
          version="1.1"
          method="GET" >
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http url='/users/sign_out' version='1.1' method='DELETE'></http>
      </request>

<!--
      <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->
        io:format([126, $p, 126, $n, 126, $n], [DynVars]),
        ok end.">
        <var name="dump" />
      </setdynvars>
-->
    </session>
  </sessions>
</tsung>
